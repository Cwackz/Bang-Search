{
    "manifest_version": 3,
    "name": "Bang Search",
    "description": "Add custom search shortcuts like !yt, !gs, !g to any search engine",
    "version": "1.0",
    
    "permissions": [
      "activeTab",
      "storage",
      "contextMenus"
    ],
    
    "host_permissions": [
      "*://*/*"
    ],
    
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["content.js"],
        "run_at": "document_idle",
        "all_frames": false
      }
    ],
    
    "action": {
      "default_popup": "popup.html",
      "default_title": "Bang Search - Custom Search Shortcuts"
    },
    
    "background": {
      "service_worker": "background.js"
    },
    
    "web_accessible_resources": [
      {
        "resources": ["*.js", "shortcuts.json"],
        "matches": ["*://*/*"]
      }
    ]
  }